@model VivesShopMVC.Data.ShopItemsDb
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-6">
        <h1>Shop Items</h1>
        @foreach (var product in Model.Products)
        {
            <partial name="ProductsIndexPartial" model="product"/>
        }
    </div>
    <div class="col-6">
        <h1>Shopping cart</h1>
        <h1>Totaal: </h1>
        <a asp-action="checkout"><input type="button" value="Checkout" class="btn-primary"/></a>
    </div>
</div>
